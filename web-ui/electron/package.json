{
  "name": "chat2db",
  "private": true,
  "license": "MIT",
  "author": "yuqin, hexi",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "./",
  "keywords": [
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alibaba/Chat2DB"
  },
  "description": "Electron Application",
  "scripts": {
    "start": "electron .",
    "electron:build": "electron-builder"
  },
  "devDependencies": {
    "electron": "20.1.4",
    "electron-builder": "^23.3.3",
    "electron-is-dev": "^2.0.0"
  },
  "icon": "logo/logo.png",
  "build": {
    "appId": "com.chat2db",
    "directories": {
      "output": "../electron-build"
    },
    "productName": "Chat2DB",
    "asar": false,
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "app/**/*",
      "jre/**/*",
      "my.bat"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "Chat2DB"
    },
    "mac": {
      "icon": "logo/logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "Chat2DB",
      "icon": "logo/logo.png"
    }
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  }
}
